generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Servey {
  id        Int    @id @default(autoincrement())
  uniqueKey String @map("unique_key") @db.VarChar(255)

  userId Int @map("user_id")

  name     String @db.VarChar(255)
  imageUrl String? @map("image_url") @db.VarChar(65535)

  contents Json?

  updatedAt DateTime @updatedAt @map("updated_at")
  createdAt DateTime @default(now()) @map("created_at")

  answers Answer[]
  user    User     @relation(fields: [userId], references: [id])

  @@unique([uniqueKey])
  @@index([uniqueKey], name: "serveys_unique_key")
  @@index([userId], name: "serveys_user_id")
  @@map("serveys")
}

model Answer {
  id        Int    @id @default(autoincrement())
  uniqueKey String @map("unique_key") @db.VarChar(255)

  userId   Int @map("user_id")
  serveyId Int @map("servey_id")

  contents Json?

  updatedAt DateTime @updatedAt @map("updated_at")
  createdAt DateTime @default(now()) @map("created_at")

  servey Servey @relation(fields: [serveyId], references: [id])
  user   User   @relation(fields: [userId], references: [id])

  @@unique([uniqueKey])
  @@index([uniqueKey], name: "answers_unique_key")
  @@index([userId], name: "answers_user_id")
  @@map("answers")
}

model User {
  id        Int    @id @default(autoincrement())
  uniqueKey String @map("unique_key") @db.VarChar(255)

  firebaseUid String @map("firebase_uid") @db.VarChar(255)

  updatedAt DateTime @updatedAt @map("updated_at")
  createdAt DateTime @default(now()) @map("created_at")

  answers Answer[]
  Servey  Servey[]

  @@unique([uniqueKey])
  @@unique([firebaseUid])
  @@index([uniqueKey], name: "users_unique_key")
  @@index([firebaseUid], name: "users_firebase_uid")
  @@map("users")
}
